<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dimen_16"
    android:paddingEnd="@dimen/dimen_16"
    android:paddingBottom="@dimen/dimen_16"
    android:paddingTop="@dimen/dimen_16">

    <ImageView
        android:layout_width="@dimen/dimen_24"
        android:layout_height="@dimen/dimen_24"
        android:src="@drawable/stand"
        android:id="@+id/label_status"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/label_status"
        android:layout_marginStart="@dimen/dimen_8"
        android:text="@string/label_activity_name"
        android:textSize="@dimen/font_20"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/activity_name"/>

    <ImageView
        android:layout_width="@dimen/dimen_24"
        android:layout_height="@dimen/dimen_24"
        android:src="@drawable/tracker"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/label_status"
        android:layout_marginTop="@dimen/dimen_16"
        android:id="@+id/label_lc"
        android:textSize="@dimen/font_24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_unknown"
        android:layout_toEndOf="@id/label_lc"
        android:layout_below="@id/activity_name"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginBottom="@dimen/dimen_16"
        android:layout_marginStart="@dimen/dimen_8"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/font_20"
        android:id="@+id/location_name"/>

    <ImageView
        android:layout_width="@dimen/dimen_24"
        android:layout_height="@dimen/dimen_24"
        android:id="@+id/label_time"
        android:layout_below="@id/label_lc"
        android:textSize="@dimen/font_24"
        android:layout_marginTop="@dimen/dimen_24"
        android:textColor="@color/colorPrimaryDark"
        android:src="@drawable/clock"/>

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_20"
        android:id="@+id/counter"
        android:layout_toEndOf="@id/label_time"
        android:layout_below="@id/label_lc"
        android:layout_marginStart="@dimen/dimen_8"
        android:layout_marginTop="@dimen/dimen_24"
        android:textColor="@color/colorPrimaryDark"/>

    <ImageView
        android:layout_width="@dimen/dimen_button"
        android:layout_height="@dimen/dimen_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/label_time"
        android:layout_marginTop="120dp"
        android:layout_marginStart="@dimen/dimen_8"
        android:src="@drawable/play"
        android:tint="@color/colorPrimary"
        android:id="@+id/trackButton"/>
</RelativeLayout>